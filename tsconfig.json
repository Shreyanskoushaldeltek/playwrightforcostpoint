{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["mocha", "chai", "node"]
  },
  "include": [
    "Tests/**/*.ts",                 // Include all tests
    "Utils/**/*.ts",                 // Include your utilities
   // "locators/**/*.xml"             // Locator XMLs (optional if using runtime only)
  ],
    "exclude": ["dist", "node_modules"]
}